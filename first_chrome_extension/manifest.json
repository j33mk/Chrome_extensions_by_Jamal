{
    "manifest_version":2,
    "name":"First Chrome extension",
    "description":"Just a simple chrome extension",
    "version":"1.0",
    "browser_action":{
        "default_icon":"icon.png",
        "default_popup":"popup.html"
    },
    "permissions":["tabs"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
      }
}